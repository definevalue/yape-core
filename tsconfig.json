{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true
  },
  "include": [
    "./src",
    "./deployed.json"
  ],
  "compileOnSave": true
}